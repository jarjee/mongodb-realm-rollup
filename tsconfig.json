{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    // Configuration for rollup
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
